# AgloK23 Trading System Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# TRADING ENVIRONMENT
# =============================================================================
TRADING_MODE=paper  # paper, live
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
DEBUG_MODE=true

# =============================================================================
# CRYPTOCURRENCY EXCHANGE APIs
# =============================================================================

# Binance (Primary Crypto Exchange)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_SANDBOX=true  # Use testnet for development
BINANCE_BASE_URL=https://testnet.binance.vision/api/v3  # Testnet URL

# Coinbase Pro (Secondary Crypto Exchange)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true  # Use sandbox for development
COINBASE_BASE_URL=https://api-public.sandbox.exchange.coinbase.com

# =============================================================================
# EQUITY MARKET APIs
# =============================================================================

# Polygon.io (Primary Equity Data)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_BASE_URL=https://api.polygon.io

# Interactive Brokers (Equity Execution)
IB_HOST=127.0.0.1
IB_PORT=7497  # TWS paper trading port (7496 for live)
IB_CLIENT_ID=1
IB_TIMEOUT=60

# Alpaca (Alternative Equity Broker)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading URL

# =============================================================================
# ALTERNATIVE DATA SOURCES
# =============================================================================

# Glassnode (On-chain Analytics)
GLASSNODE_API_KEY=your_glassnode_api_key_here

# News API (Sentiment Analysis)
NEWS_API_KEY=your_news_api_key_here

# Twitter API v2 (Social Sentiment)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# Reddit API (Reddit Sentiment)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=AgloK23TradingBot/1.0

# Alpha Vantage (Economic Data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Quandl (Economic Data)
QUANDL_API_KEY=your_quandl_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL / TimescaleDB (Primary Database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/algok23
TIMESCALEDB_URL=postgresql://postgres:password@localhost:5432/algok23_timeseries

# Redis (Caching & Feature Store)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# MESSAGE QUEUE & STREAMING
# =============================================================================

# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=algok23-consumers
KAFKA_ACKS=all
KAFKA_RETRIES=3

# =============================================================================
# MACHINE LEARNING & MODEL REGISTRY
# =============================================================================

# MLflow (Experiment Tracking)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=algok23-trading-models

# Model Storage
MODEL_REGISTRY_PATH=./models
FEATURE_STORE_PATH=./features

# =============================================================================
# RISK MANAGEMENT SETTINGS
# =============================================================================

# Portfolio Risk Limits
MAX_PORTFOLIO_DRAWDOWN=0.20  # 20% max total portfolio drawdown
MAX_ASSET_DRAWDOWN=0.10      # 10% max single asset drawdown
DAILY_LOSS_LIMIT=0.05        # 5% daily loss triggers kill-switch
MAX_POSITION_SIZE=0.05       # 5% max single position
MAX_SECTOR_EXPOSURE=0.20     # 20% max sector concentration

# Leverage Limits
MAX_CRYPTO_LEVERAGE=3.0      # Max 3x leverage on crypto
MAX_EQUITY_LEVERAGE=2.0      # Max 2x leverage on equities

# Position Sizing
POSITION_SIZING_METHOD=volatility_adjusted  # volatility_adjusted, fixed, kelly
ATR_MULTIPLIER=2.0           # ATR multiplier for stop losses
KELLY_FRACTION_CAP=0.25      # Max 25% of Kelly fraction

# =============================================================================
# TRADING STRATEGY PARAMETERS
# =============================================================================

# Strategy Selection
ACTIVE_STRATEGIES=momentum_breakout,mean_reversion,pairs_trading
REGIME_DETECTION_ENABLED=true
MULTI_TIMEFRAME_ENABLED=true

# Timeframes
PRIMARY_TIMEFRAME=5m         # Primary trading timeframe
SIGNAL_TIMEFRAMES=1m,5m,15m,1h,1d
LOOKBACK_PERIODS=252         # Days of historical data for analysis

# Technical Indicators
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BB_PERIOD=20
BB_STD=2
ATR_PERIOD=14

# =============================================================================
# EXECUTION SETTINGS
# =============================================================================

# Order Management
DEFAULT_ORDER_TYPE=limit     # limit, market, stop_limit
SLIPPAGE_TOLERANCE=0.001     # 0.1% max slippage
MAX_ORDER_SIZE_USD=10000     # Max single order size
MIN_ORDER_SIZE_USD=10        # Min order size

# Smart Order Routing
USE_SMART_ROUTING=true
ICEBERG_ORDER_ENABLED=true
VWAP_SLICING_ENABLED=true
MAX_ORDER_CHUNKS=5

# Latency Requirements
MAX_LATENCY_MS=100           # Max acceptable end-to-end latency
HEARTBEAT_INTERVAL=30        # Seconds between system health checks

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Grafana Dashboard
GRAFANA_URL=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# Prometheus Metrics
PROMETHEUS_URL=http://localhost:9090
METRICS_PORT=8000

# Alerting Channels
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here
ALERT_EMAIL_TO=alerts@yourcompany.com

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# CLOUD & INFRASTRUCTURE
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=algok23-data-bucket

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Kubernetes
K8S_NAMESPACE=algok23
K8S_CONFIG_PATH=~/.kube/config

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Jupyter Notebook
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_jupyter_token_here

# Development Database (SQLite for local dev)
DEV_DATABASE_URL=sqlite:///./algok23_dev.db

# Testing
TEST_DATABASE_URL=sqlite:///./algok23_test.db
PYTEST_PARALLEL=4

# Performance Profiling
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=./profiling

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Database Backups
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=algok23-backups

# Model Versioning
MODEL_BACKUP_ENABLED=true
MODEL_VERSIONING_ENABLED=true

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Trade Logging
TRADE_LOG_RETENTION_DAYS=2555  # 7 years for compliance
AUDIT_LOG_ENABLED=true
TRADE_REPORTING_ENABLED=true

# Data Retention
DATA_RETENTION_DAYS=1095  # 3 years of market data
LOG_RETENTION_DAYS=365    # 1 year of system logs

# Security
ENCRYPT_SENSITIVE_DATA=true
AUDIT_API_CALLS=true
RATE_LIMITING_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental Features
ENABLE_RL_TRADING=false       # Reinforcement learning strategies
ENABLE_NLP_SENTIMENT=true     # Natural language processing for sentiment
ENABLE_CROSS_ASSET_SIGNALS=true  # Cross-asset correlation signals
ENABLE_OPTIONS_TRADING=false  # Options strategies (requires additional setup)
ENABLE_FUTURES_TRADING=true   # Futures trading
ENABLE_ALTERNATIVE_DATA=true  # Alternative data sources

# Performance Optimizations
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_PARALLEL_PROCESSING=true
ENABLE_GPU_ACCELERATION=false  # Requires CUDA setup

# =============================================================================
# SYSTEM RESOURCES
# =============================================================================

# Resource Limits
MAX_CPU_CORES=4
MAX_MEMORY_GB=16
MAX_DISK_GB=100

# Concurrency Settings
ASYNC_WORKER_COUNT=10
THREAD_POOL_SIZE=20
MAX_CONCURRENT_REQUESTS=100

# Cache Settings
REDIS_MAX_MEMORY=2gb
CACHE_TTL_SECONDS=300  # 5 minutes default cache TTL
